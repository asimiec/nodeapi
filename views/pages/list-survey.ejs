<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Dummy</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="/public/css/style.css">
    <link rel="stylesheet" type="text/css" href="/public/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper./public/js/1.12.3/umd/popper.min.js" type="text/javascript"></script>
    <script src="/public/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="/public/js/custom-js.js" type="text/javascript"></script>
</head>

<body>
    <header class=" clearfix">
        <div class="container">
            <div class="logo">
                <img src="/public/images/logo-dummy.png" alt="">
            </div>
        </div>
    </header>
    <div class="top-bar clearfix">
        <div class="container">
            <div class="top-nav">
                <ul>
                    <li>
                        <a href="/questions" title="View Survey" class="selected">View Survey</a>
                    </li>
                    <li>
                        <a href="/questions/add" title="Create Survey">Create Survey</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="summry-view clearfix">
            <div class="title-area">
                <h4>All Questions</h4>
                <div class="people-responded">
                    <span class="orange">
                        <%= questionList.length +1 %>
                    </span>
                </div>
            </div>
            <div class="row">
                <section class="col-md-12">
                    <div class="all-questions-list">
                        <ul>
                            <%
                 			   questionList.forEach(function(question,i) {

                 			   %>
                            <li>

                                <a href="/questions/delete/<%=question._id%>" class="close-btn" onClick="return confirm('Are you sure you want to delete this item?');">
                                    <img src="/public/images/close.png" alt="">
                                </a>

                                <button class="publish-btn">Publish</button>
                                <a href="/questions/detail/<%=question._id%>" title="" class="link">View Question</a>
                                <a href="#" title="">
                                    <%=question.question%>
                                </a>
                            </li>

                            <% });%>
                        </ul>
                    </div>
                </section>
            </div>
        </div>
    </div>
</body>

</html>